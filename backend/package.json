{
  "name": "task-manager-backend",
  "version": "1.0.0",
  "description": "Backend service for Task Manager application",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node src/index.ts",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "migrate": "ts-node src/db/migrate.ts",
    "migrate:dev": "NODE_ENV=development ts-node src/db/migrate.ts",
    "migrate:prod": "NODE_ENV=production ts-node src/db/migrate.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "build:prod": "NODE_ENV=production tsc",
    "init:dev": "mkdir -p data && NODE_ENV=development npm run migrate:dev",
    "init:prod": "mkdir -p data && NODE_ENV=production npm run migrate:prod",
    "swagger-autogen": "ts-node src/swagger.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/sqlite3": "^3.1.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
} 